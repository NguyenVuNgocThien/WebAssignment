                <div class="auto-btn1"></div>
                <div class="auto-btn2"></div>
                <div class="auto-btn3"></div>
                <div class="auto-btn4"></div>
            </div>
        </div>
        <div class="navigation-manual">
            <label for="rad1" class="manual-btn"></label>
            <label for="rad2" class="manual-btn"></label>
            <label for="rad3" class="manual-btn"></label>
            <label for="rad4" class="manual-btn"></label>
        </div>
    </div>
</div>
<script type="text/javascript">
    var count = 1;
    setInterval(function () {
        document.getElementById('rad' + count).checked = true;
        count++;
        if (count > 4) {
            count = 1;
        }
    }, 5000);
</script>
<div class="row">
    <div class="col-4">
        <h5>Filter By Price</h5>
        <hr>
        <form>
        </form>
    </div>
    <div class="col-8">
        <div id="listproduct" class="row">
            
        </div>
    </div>
</div>
<script>

    var api = 'https://localhost:44327/api/Sanphams';

    function start() {
        getListProduct(renderListProduct);
    }

    start();

    function getListProduct(callback) {
        fetch(api)
            .then(function (reponse) {
                return reponse.json();
            }).then(callback);
    }
    function renderListProduct(products) {
        var listProduct = document.querySelector('#listproduct');
        var htmls = products.map(function (product) {
            return `<div  class="col-sm-4 ">
                <div  class="card" style="width: 18rem;">
                    <img src="${product.hinhSp}" class="card-img-top" alt="..." width="100" height="200">
                    <div class="card-body">
                        <h5 class="card-title">${product.tenSp}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">${product.dongia}</h6>
                        <a class="btn btn-info btn-sm" href="https://localhost:44354/SanPhams/Details/${product.maSp}">Xem Chi Tiet</a>
                    </div>
                </div>
            </div>`;
        });
        listProduct.innerHTML = htmls.join('')
    }
</script>